<!--создали с помощью form_with-->
<%= form_with model: state do |form|%>
  <p><%= form.label :body, "Текст статьи"%></p>
  <p class="mt"><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>

  <p><%= form.label :author %></p>
  <p><%= form.text_field :author, class: 'form-text-field' %></p>

  <p class="mt"><%= form.submit "Сохранить", class:'button button-main'%></p>
<% end %>