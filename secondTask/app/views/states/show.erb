<div class="container">
  <h2 class="title-lg mb">Статья <%=@state.id %></h2>
  <p class="mb-sm"><%= @state.body %></p>
  <p>author: <b><%= @state.author %></b></p>

  <p class="mt">
    <%= link_to "Изменить вопрос", edit_state_path(@state), class:'button button-main' %>
  </p>

  <div>
    <%= button_to 'Удалить вопрос', state_path(@state), method: :delete, class:'button button-main' %>
  </div>

  <p class="mt"><%= link_to "Все статьи", states_path, class:'button button-main' %></p>
</div>

